Algoritmo descuentosupermercado
	
	Definir a como Entero;
	Definir b, c, total como real;
	
	Escribir "Ingrese el valor de la compra";
	Leer a;
	
	Escribir  "Ingrese el descuento del supermercado";
	Leer b;
	
	c = a*b;
	total = a - c;
	
	Imprimir "Su descuento efectuado es: ",c;
	Imprimir "El total a pagar es: ", total;
	
FinAlgoritmo
